# Backend API Configuration
# Main API Gateway (future BFF layer)
NEXT_PUBLIC_ONTARA_API_URL=http://localhost:8080
# MCP Server (current direct connection)
NEXT_PUBLIC_ONTARA_MCP_URL=http://localhost:3001

# Authentication (Clerk)
# Get your keys from https://dashboard.clerk.com/
# NOTE: Production builds require valid Clerk keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_secret_key_here
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# File Upload
NEXT_PUBLIC_MAX_FILE_SIZE_MB=50
AWS_S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-west-2

# Analytics (optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Environment
NODE_ENV=development

# Ontara SDK Configuration
# Server-side API key (keep secret, never expose to client)
ONTARA_API_KEY=your-api-key-here
# SDK request timeout in milliseconds
ONTARA_API_TIMEOUT=30000
# Number of retry attempts for failed requests
ONTARA_API_RETRIES=3
# Delay between retries in milliseconds
ONTARA_API_RETRY_DELAY=1000
